{
    "name": "poptoggle",
    "version": "1.0.0",
    "description": "MCP server for displaying bespoke user interfaces",
    "main": "dist/main.js",
    "scripts": {
        "start": "electron .",
        "build": "tsc && node copy-html.js && npm run build:css && webpack --config webpack.config.js",
        "dev": "concurrently \"tsc -w\" \"npm run watch:css\" \"webpack --config webpack.config.js --watch\" \"electron .\"",
        "build:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles/output.css",
        "watch:css": "npx tailwindcss -i ./src/styles/tailwind.css -o ./dist/styles/output.css --watch"
    },
    "dependencies": {
        "@babel/standalone": "^7.26.10",
        "@modelcontextprotocol/sdk": "^1.0.0",
        "@radix-ui/react-dialog": "^1.1.6",
        "@radix-ui/react-dropdown-menu": "^2.1.6",
        "@radix-ui/react-popover": "^1.1.6",
        "@radix-ui/react-primitive": "^2.0.2",
        "@tailwindcss/cli": "^4.0.14",
        "@tailwindcss/postcss": "^4.0.14",
        "@tailwindcss/vite": "^4.0.14",
        "electron": "^29.0.0",
        "express": "^4.18.2",
        "multer": "^1.4.5-lts.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/multer": "^1.4.12",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.3.4",
        "autoprefixer": "^10.4.21",
        "concurrently": "^8.2.2",
        "copy-webpack-plugin": "^11.0.0",
        "css-loader": "^6.8.1",
        "postcss": "^8.5.3",
        "postcss-loader": "^8.1.1",
        "style-loader": "^3.3.3",
        "tailwindcss": "^4.0.14",
        "ts-loader": "^9.5.1",
        "typescript": "^5.3.3",
        "wait-on": "^8.0.3",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    }
}
